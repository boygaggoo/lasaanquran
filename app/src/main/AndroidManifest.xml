<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lisanulquranapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <!-- android:roundIcon="@mipmap/ic_launcher_round" -->
    <application
        android:name=".AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.HomeActivity"
            android:configChanges="orientation"
            android:launchMode="singleTask" />
        <activity
            android:name=".activities.WebActivity"
            android:configChanges="orientation" />
        <activity
            android:name=".activities.BooksActivity"
            android:configChanges="orientation" />
        <activity
            android:name=".activities.YoutubeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ChaptersContentActivity"
            android:configChanges="orientation" />
        <activity
            android:name=".activities.ChapterDetailActivity"
            android:configChanges="orientation" />
        <activity
            android:name=".activities.MeaningsActivity"
            android:configChanges="orientation" />
        <activity
            android:name=".activities.AudioActivity"
            android:configChanges="orientation" />
        <activity
            android:name=".activities.VideoActivity"
            android:configChanges="orientation" />
        <activity
            android:name=".activities.WrongAnswerActivity"
            android:configChanges="orientation"
            android:theme="@style/Theme.UserDialog"
            />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="CHANNEL_ID_LISAN_QURAN"/>

        <service android:name=".firebase.CustomFirebaseInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>
        <service android:name=".firebase.CustomFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
    </application>

</manifest>